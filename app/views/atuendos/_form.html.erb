                                            </div>
                                            <div class="invisible"><%= prenda.id%></div>
                                            <div class="invisible">
                                                <%if(prenda.id == @prenda_piernas)%>
                                                    <div class="prenda_piernas_inicial"><%=@prenda_piernas%></div>
                                                <%end%>
                                            </div>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%=@prenda_piernas%>



    <div class="invisible">
        <!--<select name="atuendo[prenda_piernas_id]" id="atuendo_prenda_piernas_id"><option value=""></option> </select> -->
        <%= f.select :prenda_piernas_id, options_for_select(@conversion_piernas),  class:"form-control"%>
    </div>

<!-- Pies -->
    <div class="row d-flex justify-content-center">
