<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Guardarropas", guardarropas_path %></li>
            <li class="breadcrumb-item"><%= link_to "Prendas", guardarropa_prendas_path(@guardarropa) %></li>
            <li class="breadcrumb-item"><%= link_to "Atuendos", atuendos_path %></li>
            <li class="breadcrumb-item active" aria-current="page">Atuendo</li>
        </ol>
    </nav>
    <main class="prenda d-flex justify-content-center my-5">
        <div class="card my-4 mi_card_prenda">
            <div class="card-header d-flex justify-content-between align-items-center">
                <%= link_to guardarropa_prendas_path(@guardarropa,@prendas) do %> <i class="fa fa-arrow-left text-dark"></i> <%end%>
                <div class="px-3 text-center overflow-auto"><%= @prenda.tipo %></div>
                <%= link_to guardarropa_prenda_path(@guardarropa,@prenda), method: :delete, data: {confirm: 'Â¿Seguro que desea eliminar esta prenda?' } do %><i class="fas fa-trash text-dark"></i><% end %>
            </div>

            <div class="container h-100 d-flex justify-content-center align-items-center my-2" >
                <%= image_tag(@prenda.link_imagen , class:"fotos_cards_show h-100") %>
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><span class="negrita">Categoria: </span><%= @prenda.categoria %></li>
                <li class="list-group-item"><span class="negrita">Tipo de Tela: </span><%= @prenda.tela %></li>
                <li class="list-group-item"><span class="negrita">Color/es: </span><%= @prenda.color_primario%></li>
            </ul>

            <footer class="card-footer">
                <div class="action form-group">
                    <%= link_to edit_guardarropa_prenda_path(@guardarropa,@prenda), class: "btn btn-general px-3 py-2 my-1 form-control" do %> <i class="fas fa-pencil-alt"></i><p class="d-inline"> Editar</p> <%end%>
                </div>
            </footer>
        </div>
    </main>
</div>