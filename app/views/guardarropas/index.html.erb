<main class="guardarropa container">
    
    <h1 class="titulo my-4 text-center">Guardarropas de "Usuario"</h1>
    
    <div class="splide">
        <div class="splide__slider">
            <div class="splide__track">
                <div class="splide__list">
                    <% @guardarropas.each do |guardarropa| %>
                        <div class="splide__slide">
                            <div class="card h-100">
                                <!-- <div class="card-header d-flex justify-content-between align-items-center">
                                    <%= link_to edit_guardarropa_path(guardarropa) do %> <i class="fa fa-pencil-alt fa-lg text-dark mx-5"></i><%end%>
                                    <%= link_to guardarropa_path(guardarropa), method: :delete, data: {confirm: 'Â¿Seguro que desea eliminar este guardarropa?' } do %><i class="mx-5 fas fa-trash fa-lg text-dark"></i><% end %>
                                </div> -->

                                <%= link_to guardarropa_prendas_path(guardarropa), class: "card-body d-flex justify-content-center align-items-center" do %>
                                    <%if guardarropa.imagen.attached?%>
                                        <%= image_tag(guardarropa.imagen , class:"fotos_cards_index_guardarropas h-100") %>
                                    <%else%>
                                        <%= image_tag(guardarropa.link_imagen , class:"fotos_cards_index_guardarropas h-100") %>
                                    <%end%>
                                <%end%>

                                <%= link_to guardarropa_prendas_path(guardarropa), class: "card-footer card-footer-index-guardarropas text-decoration-none d-flex justify-content-between align-items-center" do %>
                                    <h4 class="text-center container text-dark"><%= guardarropa.Nombre%></h4>
                                <%end%>
                                
                            </div>
                        </div>
                    <%end%>
                </div>
            </div>
        </div>
    </div>

    <section class="navegacion-guardarropa botones-responsive d-flex justify-content-center align-center my-4" id="botones-prenda-index">
        <%= link_to new_guardarropa_path, class: "btn btn-crear btn-lg" do %>  <i class="fas fa-plus fa-sm"></i> <p class="d-inline">Crear Guardarropa</p><%end%>
    </section>
</main>