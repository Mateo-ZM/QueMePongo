<!DOCTYPE html>
<html>
    <head>
        <title>QueMePongo</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <meta name="viewport" content="width=device-width, initial-scale=0.86, maximum-scale=5.0, minimum-scale=0.86">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>        
        <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>
        <%= favicon_link_tag 'wardrobe.svg' %>
    </head>

    <body class="<%= controller_name %> <%= action_name %>">
        <nav class="navbar navbar-expand-lg landing-navbar sticky-top d-flex justify-content-around align-items-center">
            <div class="container">
                <div class="container d-flex justify-content-center">
                    <a class="" href="/">
                        <img class="img-fluid nav-icon" src="https://i.pinimg.com/564x/6e/35/5d/6e355d88a989d9856fd4c36aa7df997b.jpg" alt="Logo de Que Me Pongo">
                    </a>
                </div>

                <div class="container d-flex justify-content-center">
                    <div id='clima-loader' class="text-light">
                        Cargando...
                    </div>
                    <div class = "nav-text text-light nav-clima" id="clima-container"></div>
                </div>

                
                <button class="navbar-toggler container " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <i class="fas fa-bars fa-2x"></i>
                </button>
                <div class="collapse  navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav d-flex justify-content-center ms-auto"> 
                        <li class="nav-item px-3 py-2 rounded">
                            <a class="nav-text" href="/"><%=t('inicio')%></a>
                        </li>
                        <!-- <li class="nav-item px-3 py-2 rounded">
                            <a class="nav-text" href="/"><%=t('servicio')%></a>
                        </li>
                        <li class="nav-item px-3 py-2 rounded">
                            <a href="/#nosotros" class="nav-text"><%=t('nosotros')%></a>
                        </li> -->
                        <li class="nav-item px-3 py-2 rounded">
                            <a class="nav-text" href="/#contacto"><%=t('contacto')%></a>
                        </li>
                        <li class="nav-item px-3 py-2 rounded">
                            <%= link_to "Iniciar sesion", login_path, class: "text-white" %>
                        </li>
                        <li class="nav-item px-3 py-2 rounded">
                            <%= link_to logout_path, method: :get, class: "text-danger", data: {confirm: 'Â¿Seguro que desea cerrar sesion?' } do %>Cerrar sesion<% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <%= yield %>
        <%= insert_paloma_hook %>
    
        <footer class="footer">
            <div class="container d-flex flex-row">
                <p class="m-4">QueMePongo &copy; <%=t('derechos_reservados')%></p>
                <span class="ms-auto">
                    <p id="contacto" class="m-4 contacto text-center"><%=t('contacto')%>: +54 9 11 2633-4567 | info@quemepongo.com.ar</p>
                </span>
            </div>
        </footer>
        
    </body>
</html>