<main class= "container h-100">
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to t('Guardarropas'), guardarropas_path%></li>
                <li class="breadcrumb-item"><%= link_to t('Prendas'), guardarropa_prendas_path(@guardarropa) %></li>
                <li class="breadcrumb-item active" aria-current="page"><%= btn_text %></li>
            </ol>
        </nav>
    </div>
    <h1 class = "titulo text-center mt-2 mb-5"> <%= titulo %> </h1>

    <div class="d-flex  justify-content-center">
        <div class="card mi_card_modif ">
            <%= form_for [@guardarropa,@prenda] do |f| %>
                <div class="card-header card-header-atuendos-new position-relative">
                    <%= f.text_field :tipo, class: "my-2 text-box form-control d-flex justify-content-center", placeholder: "Nombre" %>  
                </div>

                <div class="container d-flex justify-content-center my-2">
                    <%if prenda.imagen.attached?%>
                        <%= image_tag(prenda.imagen , class:"fotos_cards_index h-100") %>
                    <%else%>
                        <%= image_tag(link_imagen , class:"fotos_cards_index h-100") %>
                    <%end%>
                </div>

                <div class="field form-group">   
                    <%=f.file_field :imagen , class: "form-control"%>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <span class="negrita">
                            <%= t('Link_imagen')%> 
                        </span>
                        <%= f.text_field :link_imagen, class: "my-2 text-box form-control", placeholder: t('Placeholder_link_imagen') %>
                    </li>
                    <li class="list-group-item">
                        <span class="negrita"> 
                            <%=t('Categoria') %> 
                        </span>
                        <%= f.select :categoria, options_for_select([[t('Torso'), 'Torso'],[t('Piernas'),'Piernas'],[t('Pies'), 'Pies'],[t('Accesorio'), 'Accesorio']]), :prompt => t('Elige_uno'), class:"form-control"%>
                    </li>
                    <li class="list-group-item">
                        <span class="negrita"> 
                            <%=t('Tipo_tela') %>
                        </span> 
                        <%= f.select :tela, options_for_select([[t('Algodon'), 'Algodon'],[t('Lana'),'Lana'],[t('Lino'), 'Lino'],[t('Cuero'), 'Cuero'],[t('Denim'), 'Denim'],[t('Seda'), 'Seda'],[t('Poliester'), 'Poliester'],[t('Mohair'), 'Mohair'],[t('Piel'), 'Piel'],[t('Cuerina'), 'Cuerina']]), :prompt => t('Elige_uno'), class: "form-control"%>
                    </li>
                    <li class="list-group-item">
                        <span class="negrita"> 
                            <%=t('Color_primario') %> 
                        </span>
                        <%= f.color_field :color_primario, class: "my-2 text-box form-control" %>
                    </li>
                    <li class="list-group-item">
                        <span class="negrita"> 
                            <%=t('Color_secundario') %> 
                        </span>
                        <%= f.color_field :color_secundario, class: "my-2 text-box form-control" %>
                    </li>
                </ul>
                
                <footer class="card-footer">
                    <div class="action form-group">
                        <%= button_tag(type: 'submit', class: "btn btn-general px-3 py-2 my-3 btn-form  form-control ") do %>
                            <i class="fas fa-check"></i> <p class="d-inline"><%=t('Confirmar') %></p> <!-- Ver porque no funciona <i class="bi bi-plus-circle"></i> -->
                        <% end %>
                        
                        <%= link_to link_volver, class:"btn-salir px-3 text-decoration-none text-center text-white form-control btn-form ", data: {confirm: t('Volver_sin_guardar?')  } do%>
                            <i class="fa fa-arrow-left"></i><p class="d-inline"> <%=t('Volver') %></p>
                        <% end %>
                    </div>
                </footer>
            <% end %>
        </div>
    </div>
</main>