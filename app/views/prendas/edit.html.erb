
<main class= "modificacion container h-100">

    <h1 class="titulo my-5"> Modificaci√≥n de prenda </h1>

    <div class="card">
        <%= form_for @prenda do |f| %>
            <div class="field form-group">
                Tipo de prenda: 
                <%= f.text_field :tipo, class: "my-2 text-box form-control" %>
            </div>
            <div class="field form-group">
                Categoria de la prenda:
                <%= f.select :categoria, [ 'Torso', 'Piernas', 'Pies', 'Accesorio'], :prompt => 'Elige uno', class:"form-control"%>
            <div class="field form-group">
                Tela de la prenda: 
                <%= f.text_field :tela, class: "my-2 text-box form-control" %>
            </div>
            <div class="field form-group">
                Color Primario de la prenda: 
                <%= f.text_field :color_p, class: "my-2 text-box form-control" %>
            </div>
            <div class="field form-group">
                Color secundario de la prenda: 
                <%= f.text_field :color_s, class: "my-2 text-box form-control" %>
            </div>
            <div class="field form-group">
                Link de Imagen de la prenda: 
                <%= f.text_field :link_imagen, class: "my-2 text-box form-control" %>
            </div>
            <div class="field form-group">
                <%= f.submit "Modificar prenda",  class: "btn btn-general btn-lg px-3 py-2 my-3 form-control"%>
                <%= button_to "Volver", "/prendas", class:"btn-salir px-3  text-white form-control"%>
            </div>
        <% end %>
    </div>
</main>
