<main class= "modificacion container h-100">
    <h1 class="titulo my-3"> Modificación de prenda </h1>
    <div class="d-flex  justify-content-center">
        <div class="card mi_card_modif ">
            <%= form_for @prenda do |f| %>
                <div class="card-header position-relative">
                    <%= f.text_field :tipo, class: "my-2 text-box form-control d-flex justify-content-center", placeholder: "Nombre" %>  
                </div>

                <div class="container d-flex justify-content-center my-2" >
                    <%= image_tag( @prenda.link_imagen , class:"fotos_cards_show h-100") %>
                </div>

                <div class="field form-group">   
                    <%=f.file_field :imagen , class: "form-control"%>
                </div>

                <div class="field form-group">
                    <span class="negrita">Link de la Imagen:</span>
                    <%= f.text_field :link_imagen, class: "my-2 text-box form-control", placeholder: "Link" %>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span class="negrita">Categoria: </span><%= f.select :categoria, [ 'Torso', 'Piernas', 'Pies', 'Accesorio'], :prompt => 'Elige uno', class:"form-control"%></li>
                    <li class="list-group-item"><span class="negrita">Tela:</span> <%= f.select :tela, ['Algodon', 'Lana', 'Lino', 'Cuero', 'Denim', 'Seda', 'Poliéster', 'Mohair', 'Piel', 'Cuerina'], :prompt => 'Elige uno', class: "form-control"%></li>
                    <li class="list-group-item"><span class="negrita">Color primario: </span><%= f.text_field :color_primario, class: "my-2 text-box form-control", placeholder: "Ej: Rojo, Azul, etc." %> </li>
                    <li class="list-group-item"><span class="negrita">Color secundario: </span><%= f.text_field :color_secundario, class: "my-2 text-box form-control", placeholder: "Ej: Rosa, Naranja, etc." %> </li>
                </ul>
                
                <footer class="card-footer">
                    <div class="action form-group">
                        <%= button_tag(type: 'submit', class: "btn btn-general px-3 py-2 my-3 form-control ") do %>
                            <i class="fas fa-plus-circle"></i> <p class="d-inline">Editar</p>
                        <% end %>
                        <%= link_to "/prendas", class:"btn-salir px-3 text-decoration-none text-center text-white form-control" do%>
                            <i class="fa fa-arrow-left"></i><p class="d-inline"> Volver</p>
                        <% end %>
                    </div>
                </footer>
            <% end %>
        </div>
    </div>
</main>