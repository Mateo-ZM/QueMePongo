
<main class= "modificacion container h-100">

    <h1 class="titulo my-5"> Modificaci√≥n de prenda </h1>

    <%= form_for @prenda do |f| %>
        <div>
            Tipo de prenda: 
            <%= f.text_field :tipo, class: "my-2 text-box" %>
        </div>
        <div>
            Tela de la prenda: 
            <%= f.text_field :tela, class: "my-2 text-box" %>
        </div>
        <div>
            Color Primario de la prenda: 
            <%= f.text_field :color_p, class: "my-2 text-box" %>
        </div>
        <div>
            Color secundario de la prenda: 
            <%= f.text_field :color_s, class: "my-2 text-box" %>
        </div>
        <!--<%= f.select :categoria, Prenda.categoria%> -->
        <div>
            <%= f.submit "Modificar prenda",  class: "btn btn-general btn-lg px-3 py-2 my-3"%>
        </div>
    <% end %>
</main>

