
<main class="guardarropa container">
    
    <h1 class="titulo my-4 text-center">Mi guardarropa</h1>

    <div class="row mt-5 mb-3"> 
        <% @prendas.each do |prenda| %>
            <div class="col-lg-2 col-md-3 col-sm-4 col-6 my-2">
                    <%= link_to prenda, class: "text-decoration-none" do %>
                
                    <div class="card h-100">
                        <div class="container h-100 d-flex justify-content-center align-center my-1" >
                        <img src=<%=if prenda.link_imagen != nil
                                        prenda.link_imagen
                                    else
                                        "https://www.colombianosune.com/sites/default/files/asociaciones/NO_disponible-43_7.jpg"
                                    end %> class="img-fluid align-middle" style= "max-height: 7rem;" alt="imagen de la prenda">
                        </div>
                        <div class="card-footer">
                            <h5 class="text-center text-dark"><%= prenda.tipo %></h5>
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>

    <section class="navegacion-guardarropa d-flex justify-content-between align-center my-4">
        <%= link_to "Crear nueva prenda", 'prendas/new', class: "btn btn-general btn-lg px-3 py-2"%>  
        <div class="botones-slider">
            <button class="control-left" type="button">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="control-right" type="button">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </section>
</main>

<footer class="footer fixed-bottom">
    <div class="container d-flex flex-row">
        <p class="m-4">QueMePongo &copy; All rights reserved</p>
        <span class="ms-auto">
            <p class="m-4 contacto text-center">Contacto: +54 9 11 2633-4567 | info@quemepongo.com.ar</p>
        </span>
    </div>
</footer>