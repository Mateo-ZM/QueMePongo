
<div class="container">
    <main class="prenda d-flex flex-column justify-content-center align-items-center my-3 py-3">

        <h1 class="my-1"><%= @prenda.tipo %></h1>

        <div class="card my-4" style="width: 18rem;">
            <img src="https://falabella.scene7.com/is/image/FalabellaAR/880107514_1?wid=800&hei=800&qlt=70" class="card-img-top" alt="imagen de la prenda">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= @prenda.categoria %></li>
                <li class="list-group-item"><%= @prenda.tela %></li>
                <li class="list-group-item"><%= @prenda.color_p %></li>
                <li class="list-group-item"><%= @prenda.color_s %></li>
            </ul>
        </div>



        <div class="row mb-2">
            <div class="col-md-4 col-sm-12">
                <button  class="btn btn-general btn-lg px-3 py-2">
                    <%= link_to "Editar", edit_prenda_path(@prenda), class: "text-decoration-none text-white my-2"%>
                </button>
            </div>

            <div class="col-md-4 col-sm-12">
                <%= button_to "Eliminar", prenda_path(@prenda), method: :delete, class:"btn btn-general btn-lg px-3 py-2", data: {confirm: 'Seguro que desea eliminar esta prenda?' } %>
            </div>

            <div class="col-md-4 col-sm-12">
                <button  class="btn btn-general btn-lg px-3 py-2">
                    <%= link_to "Volver", "/prendas", class:"text-decoration-none text-white" %>
                </button>
            </div>
        </div>
    </main>
</div>

<footer class="footer fixed-bottom">
    <div class="container d-flex flex-row">
        <p class="m-4">QueMePongo &copy; All rights reserved</p>
        <span class="ms-auto">
            <p class="m-4 contacto text-center">Contacto: +54 9 11 2633-4567 | info@quemepongo.com.ar</p>
        </span>
    </div>
</footer>


