<div class="container">
    <div class="container mt-4 mb-0">
        <nav aria-label="breadcrumb mb-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to t('Guardarropas'), guardarropas_path%></li>
            <li class="breadcrumb-item"><%= link_to t('Prendas'), guardarropa_prendas_path(@guardarropa) %></li>
            <li class="breadcrumb-item active" aria-current="page"> <%=t('Prenda')%> </li>
        </ol>
        </nav>
    </div>
    <main class="prenda d-flex justify-content-center mb-5">
        <div class="card my-4 mi_card_prenda">
            <div class="card-header d-flex justify-content-between align-items-center">
                <%= link_to guardarropa_prendas_path(@guardarropa,@prendas) do %> <i class="fa fa-arrow-left text-dark"></i> <%end%>
                <div class="px-3 text-center overflow-auto"><%= @prenda.tipo %></div>
                <%= link_to guardarropa_prenda_path(@guardarropa,@prenda), method: :delete, data: {confirm: t('Eliminar_prenda') } do %><i class="fas fa-trash text-dark"></i><% end %>
            </div>

            <div class="container h-100 d-flex justify-content-center align-items-center my-2" >
                <%if @prenda.imagen.attached?%>
                    <%= image_tag(@prenda.imagen , class:"fotos_cards_index h-100") %>
                <%else%>
                    <%= image_tag(@prenda.link_imagen , class:"fotos_cards_index h-100") %>
                <%end%>
            </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><span class="negrita"><%=t('Categoria') %> </span><%= t(@prenda.categoria) %></li>
                <li class="list-group-item"><span class="negrita"><%=t('Tipo_tela') %> </span><%= t(@prenda.tela) %></li>
                <li class="list-group-item d-flex justify-content-start align-items-center">
                    <span class="negrita"><%=t('Color/es') %> &nbsp</span>
                        <p class="color" style="background-color:<%= @prenda.color_primario%>"></p>
                        <div class="secundario d-flex align-items-center" style="visibility:<%= @hide %>"> <span>&nbspy&nbsp</span> <p class="color" style="background-color:<%= @prenda.color_secundario%>"></p></div>      
                </li>
                <!-- <li class="list-group-item d-flex justify-content-start align-items-center"><span class="negrita">Color Secundario: &nbsp</span><p class="color" style="background-color:<%= @prenda.color_secundario%>"></p><%= @prenda.color_secundario%></li> -->
            </ul>

            <footer class="card-footer">
                <div class="action form-group">
                    <%= link_to edit_guardarropa_prenda_path(@guardarropa,@prenda), class: "btn btn-general btn-form px-3 py-2 my-1 form-control" do %> <i class="fas fa-pencil-alt"></i><p class="d-inline"> <%=t('Editar') %> </p> <%end%>
                </div>
            </footer>
        </div>
    </main>
</div>