<div class="container m-auto">
    <main class="d-flex justify-content-center align-items-center">
        <div class="card my-4 card_login">
            <div class="card-header d-flex justify-content-center align-items-center">
                Inicio de sesion
            </div>
            <%= form_tag '/login' do %>
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div>
                        <div class="row my-4">
                                <div class="col-5 d-flex justify-content-center align-items-center"> <i class="fas fa-envelope"></i><p class="m-0 d-inline">&nbspEmail: </p> </div>
                                <div class="col-7"><%= text_field_tag :email%></div>
                        </div>
                        <div class="row my-4">
                                <div class="col-5"><i class="fas fa-lock"></i></i><p class="m-0 d-inline"> Contrasena: </p> </div>
                                <div class="col-7"><%= password_field_tag :password%></div>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="action form-group d-flex flex-column justify-content-center align-items-center">
                        <%= button_tag(type: 'submit', class: "btn btn-general px-4 py-2 my-3 btn-form") do %>
                            <i class="fas fa-sign-in-alt"></i><p class="d-inline"> Iniciar sesion</p>
                        <% end %>
                        <%= link_to new_user_path, class: "my-2 text-dark text-decoration-none fw-bold" do%>
                            No tienes un usuario aun? <span class="color-letra-terciario">Registrate!</span>
                        <% end %>
                    </div>
                </footer>
            <%end%>
        </div>
    </main>
</div>