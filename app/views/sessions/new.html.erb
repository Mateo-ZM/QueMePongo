<div class="container">
    <main class="prenda d-flex justify-content-center mb-5">
        <div class="card my-4 card_login">
            <div class="card-header d-flex justify-content-center align-items-center">Inicio de sesion</div>
            <%= form_tag '/login' do %>
            <div class="d-flex justify-content-center align-items-center my-3">
                <div class="container" >
                    <div class="row container">
                        <div class="col-4 d-flex justify-content-center align-items-center">
                            <p class="m-0">Email: </p>
                        </div>
                        <div class="col-8">
                            <%= text_field_tag :email, "Email"%>
                        </div>
                        
                    </div>

                    <div class="row my-2">
                        <div class="col-4">
                            <p class="d-flex justify-content-center align-items-center">Contrasena: </p>
                        </div>
                        <div class="col-8">
                            <%= password_field_tag :password%>
                        </div>
                    </div>
                </div>
            </div>
                <footer class="card-footer">
                    <div class="action form-group d-flex flex-column justify-content-center align-items-center">
                        <%= button_tag(type: 'submit', class: "btn btn-general px-4 py-2 my-3 btn-form") do %>
                            Iniciar sesion
                        <% end %>
                        <%= link_to new_user_path, class: "my-2" do%>
                            No tienes un usuario aun? Registrate!
                        <% end %>
                    </div>
                </footer>
            <%end%>
                
            
        
        </div>
    </main>
</div>